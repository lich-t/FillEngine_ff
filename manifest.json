{
  "manifest_version": 3,
  "name": "FillEngine",
  "version": "1.1.1",
  "description": "Extension intelligente pour remplir automatiquement les formulaires Google avec vos données CSV personnalisées",
  "author": "desiredev",
  "short_name": "FillEngine",
  "homepage_url": "https://github.com/lich-t/FillEngine_ff.git",

  "permissions": ["activeTab", "tabs", "storage", "scripting"],

  "host_permissions": ["https://docs.google.com/forms/*", "https://storage.googleapis.com/*"],

  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/core/config.js",
        "src/core/pageDetector.js",
        "src/form/generateDictionary.js",
        "src/form/FormDetector.js",
        "src/form/FieldMatcher.js",
        "src/form/FieldFiller.js",
        "src/form/FormAutoFiller.js",
        "src/init/content-init.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "FillEngine",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },

  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "fillengine@tigerdev.com",
      "strict_min_version": "109.0",
      "data_collection_permissions":  { 
"required": ["none"] }
    }
  }
}
